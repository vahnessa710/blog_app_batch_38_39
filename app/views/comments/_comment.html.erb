<% if comment.persisted? %>

<hr>
<p>
  <strong>Commenter:</strong>
  <%= comment.commenter %>
</p>

<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>

<div style="margin-top: 8px; font-size: 0.9rem;">
  <%= link_to 'Edit', edit_article_comment_path(@article, comment), style: "margin-right: 10px; color: #1d4ed8; text-decoration: none;" %>
  <%= link_to "See Comment", article_comment_path(@article, comment), style: "color: #4b5563; text-decoration: none;" %>
</div>

<% end %>